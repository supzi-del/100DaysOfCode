{
  "name": "Background Changer",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Changes background color of active page.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "browser_action": {
    "default_title": "Change Color",
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  }
}